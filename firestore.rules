
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading of trips and their segments by anyone.
    // This is suitable for development but should be secured
    // with authentication rules for production.
    match /trips/{tripId} {
      allow read: if true;

      match /segments/{segmentId} {
        allow read: if true;
      }
    }

    // Disallow all other writes to the database for security.
    match /{document=**} {
      allow write: if false;
    }
  }
}
