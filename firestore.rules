rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /trips/{tripId} {
      // Allow reading a list of trips and a single trip document
      allow get, list: if true;

      // Allow reading segments within a trip
      match /segments/{segmentId} {
        allow get, list: if true;
      }
    }
  }
}
